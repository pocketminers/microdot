{
    "$schema": "https://typedoc.org/schema.json",
    "entryPoints": [
        "./src/component/index.ts",
        "./src/service/index.ts",
        "./src/template/index.ts",
        "./src/utils/index.ts",
    ],
    "entryPointStrategy": "expand",
    "sort": ["alphabetical"],
    "name": "microdot",
    "headings": {
        "document": true,
        "readme": true,
    },
    "highlightLanguages": [
        "bash",
        "console",
        "css",
        "html",
        "javascript",
        "json",
        "jsonc",
        "json5",
        "yaml",
        "sql",
        "ts",
        "tsx"
    ],    
    "navigation": {
        "excludeReferences": false,
        "includeFolders": true,
        "compactFolders": false,
        "includeGroups": true
    },
    "readme": "./README.md",
    "out": "./docs",
    "cleanOutputDir": true,
    "plugin": [
        "typedoc-plugin-coverage",
        "typedoc-plugin-extras"
    ],
    "alwaysCreateEntryPointModule": false,
    "validation": {
        "invalidLink": false
    }
}