{
    "$schema": "https://typedoc.org/schema.json",
    "entryPoints": [
        "./src/index.ts"
    ],
    "entryPointStrategy": "expand",
    "sort": ["alphabetical"],
    "name": "microdot",
    "headings": {
        "document": true,
        "readme": true,
    },
    "highlightLanguages": [
        "bash",
        "console",
        "css",
        "html",
        "javascript",
        "json",
        "jsonc",
        "json5",
        "yaml",
        "sql",
        "tsx"
    ],    
    "navigation": {
        "excludeReferences": true,
        "includeFolders": true,
        "compactFolders": false,
        "includeGroups": false
    },
    "readme": "./README.md",
    "out": "./docs",
    "cleanOutputDir": true,
    "plugin": [
        "typedoc-plugin-inline-sources",
        "typedoc-plugin-coverage",
        "typedoc-plugin-extras"
    ],
    "alwaysCreateEntryPointModule": false,
    "githubPages": true,
    "gitRemote": "github.com/pocketminers/microdot.git",
    "gitRevision": "main",
    "validation": {
        "invalidLink": false
    }
}