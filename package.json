{
  "name": "@pocketminers/microdot",
  "version": "0.0.1-test41",
  "description": "Decentralized Micro-services Architecture",
  "main": "dist/cjs/index.js",
  "types": "dist/esm/index.d.ts",
  "private": false,
  "type": "module",
  "module": "dist/esm/index.js",
  "browser": "dist/browser/index.js",
  "files": [
    "dist/**/*",
    "src/**/*",
    "README.md",
    "LICENSE",
    "package.json",
    "tsconfig.json"
  ],
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "browser": "./dist/browser/index.js",
      "types": "./dist/esm/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "29.5.14",
    "@types/node": "22.10.5",
    "@types/supertest": "^6.0.2",
    "@types/text-encoding": "^0.0.40",
    "eslint": "^9.18.0",
    "jest": "^29.7.0",
    "jiti": "^2.4.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "10.9.2",
    "tsc-alias": "^1.8.10",
    "typedoc": "^0.27.6",
    "typedoc-plugin-coverage": "^3.4.1",
    "typedoc-plugin-extras": "^4.0.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "typescript-transform-paths": "^3.5.3"
  },
  "dependencies": {
    "crypto": "^1.0.1",
    "did-jwt": "^8.0.4",
    "did-resolver": "^4.1.0",
    "ethr-did-resolver": "^11.0.2",
    "express": "^4.17.1",
    "sequelize": "^6.37.5",
    "uuid": "^11.0.5"
  },
  "scripts": {
    "docs": "typedoc",
    "lint": "eslint src",
    "test": "jest -c jest.config.js",
    "clean": "rm -rf dist",
    "build:cjs": "tsc --project tsconfig.cjs.json && tsc-alias -p tsconfig.cjs.json",
    "build:esm": "tsc --project tsconfig.esm.json && tsc-alias -p tsconfig.esm.json",
    "build:browser": "tsc --project tsconfig.browser.json && tsc-alias -p tsconfig.browser.json",
    "build": "yarn build:cjs && yarn build:esm && yarn build:browser",
    "publish": "npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pocketminers/microdot.git"
  },
  "homepage": "https://github.com/pocketminers/microdot#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com/"
  },
  "unpkg": "dist/browser/index.js",
  "jsdelivr": "dist/browser/index.js",
  "keywords": [
    "microservices",
    "decentralized",
    "architecture"
  ],
  "author": "Pocket Labs LLC",
  "license": "MIT",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "exlude": [
    "node_modules",
    "docs",
    "__coverage__",
    "__tests__"
  ],
  "include": [
    "src"
  ]
}
