{
    "compilerOptions": {
        "rootDir": "./src",
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*", "dist/*"],
            "@artifacts/*": ["src/artifacts/*", "dist/artifacts/*"],
            "@utils/*": ["src/utils/*", "dist/utils/*"],
        },
        "outDir": "./dist",
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}