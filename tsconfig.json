{
    "compilerOptions": {
        "rootDir": "./",
        "rootDirs": ["src", "__tests__", "__examples__"],
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"],
            "@tests/*": ["__tests__/*"],
            "@examples/*": ["examples/*"],
            "@artifacts/*": ["src/artifacts/*"],
            "@utils/*": ["src/utils/*"]
        },
        "outDir": "./dist",
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*.ts",
        "__tests__/**/*.ts"
    ]
}